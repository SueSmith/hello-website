// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/ubuntu
{
    "name": "Ubuntu",
    "image": "mcr.microsoft.com/devcontainers/base:noble",
    "features": {
        "ghcr.io/devcontainers/features/node:1": {}
    },
    "portsAttributes": {
        "3000": {
            "label": "Website",
            "onAutoForward": "openPreview"
        },
        "7676": {
            "label": "Compute",
            "onAutoForward": "openPreview"
        },
        "5173": {
            "label": "Vite",
            "onAutoForward": "openPreview"
        }
    },
    "updateContentCommand": "npm install",
    "postAttachCommand": "npm run dev", 
    "waitFor": "updateContentCommand",
    "customizations": {
        "vscode": {
            "extensions": [
                "jkearins.action-buttons-ext@0.1.1",
                "esbenp.prettier-vscode",
                "dbaeumer.vscode-eslint"
            ],
            "settings": {
                "files.exclude": {
                    "package-lock.json": true,
                    ".gitignore": true,
                    "node_modules/": true,
                    ".devcontainer/": true
                },
                "editor.minimap.enabled": false,
                "actionButtons": {
                    "commands": [
                        {
                            "name": "ðŸª„ Prettify",
                            "singleInstance": true,
                            "useVsCodeApi": true,
                            "command": "editor.action.formatDocument"
                        },
                        {
                            "name": "ðŸ’» Terminal",
                            "singleInstance": true,
                            "useVsCodeApi": true,
                            "command": "workbench.action.terminal.toggleTerminal"
                        },
                        {
                            "name": "ðŸš€ Deploy",
                            "singleInstance": true,
                            "command": "if [ ! $FASTLY_API_TOKEN ]; then echo 'Grab an API key and add it your repo before deploying!'; else if [ ! -d './edge' ]; then npx --yes @fastly/compute-js-static-publish@latest --root-dir=./dist --output=./edge; fi && cd ./edge && npm install && npx --yes @fastly/cli compute publish --service-name=$CODESPACE_NAME --accept-defaults --auto-yes || echo 'Oops! Something went wrong. ðŸ˜­'; fi"
                        },
                        {
                            "name": "ðŸ”Ž Split",
                            "singleInstance": true,
                            "useVsCodeApi": true,
                            "command": "workbench.action.moveEditorToNextGroup"
                        }
                    ],
                    "defaultColor": "none"
                }
            }
        }
    }
}
